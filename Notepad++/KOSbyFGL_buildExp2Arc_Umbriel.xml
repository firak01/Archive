<target name="KOSArchive">
	<echo>KOS Archive</echo>
	<!-- Example of howto change file modification date -->
	<!-- <touch>
	  <fileset dir="${dest.dir}"/>
	</touch>
	-->
	<copy todir="//${dest.dirNotepadPP}" overwrite="false">
	  <fileset dir="//${src.dirRepositoryKos}">
		<include name="**/KOSbyFGL.xml"/>
	  </fileset>
	</copy>
</target>

